	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
	android:scrollbarStyle="outsideInset">
		
	<TextView 
	   	android:id="@+id/message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
